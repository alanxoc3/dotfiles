# Alan's sway configuration.
# Useful man pages:
#   man 5 sway
#   man 5 sway-input
#   man 5 sway-bar
#   man 5 sway-output

# Logo key is super.
set $mod Mod4
set $left h
set $down j
set $up k
set $right l
set $term foot

input * tap enabled
input * click_method clickfinger
input * drag_lock disabled # 2025-08-18: guess this is a new option, defaults to enabled which makes it so i have to tap again for click drag, which i dont like right now. Don't really get the new behavior completely.
input * dwt disabled
input * repeat_delay 250
input * repeat_rate 60

# This gets rid of the title bar
default_border pixel 1

output eDP-1 scale 1
output eDP-1 bg #000000 solid_color

### Idle configuration
#
# Example configuration:
#

# exec swayidle -w \
#          timeout 300 'swaylock -f -c 000000' \
#          timeout 600 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \
#          before-sleep 'swaylock -f -c 000000'
#
# This will lock your screen after 300 seconds of inactivity, then turn off
# your displays after another 300 seconds, and turn your screens back on when
# resumed. It will also lock your screen before your computer goes to sleep.

### Input configuration
#
# Example configuration:
#
#   input "2:14:SynPS/2_Synaptics_TouchPad" {
#       dwt enabled
#       tap enabled
#       natural_scroll enabled
#       middle_emulation enabled
#   }
#
# You can get the names of your inputs by running: swaymsg -t get_inputs

### Key bindings
#
# Basics:
#
    # bindsym $mod+Return         exec $term
    bindsym $mod+Return         exec footclient             -t xterm-256color /bin/zsh -li -c "tmux"
    bindsym $mod+Shift+Return   exec footclient             -t xterm-256color /bin/zsh -li -c "tmux attach"
    bindsym $mod+Control+Return exec footclient             -t xterm-256color /bin/zsh -li
    bindsym $mod+c              exec sh -c 'systemctl --user stop fcitx5; if [ "activating" = "$(systemctl --user is-active warpd)"  ]; then systemctl --user stop warpd;  else systemctl --user start warpd;  fi'
    bindsym $mod+d              exec sh -c 'systemctl --user stop warpd;  if [ "activating" = "$(systemctl --user is-active fcitx5)" ]; then systemctl --user stop fcitx5; else systemctl --user start fcitx5; fi'
    bindsym $mod+m              exec xmirror

    bindsym $mod+q kill

    bindsym $mod+space exec $HOME/.dot/bin/xmen-exec
    bindsym $mod+Shift+space exec $HOME/.dot/bin/xmen-pass
    floating_modifier $mod normal
    bindsym $mod+Shift+c reload

    # Exit sway (logs you out of your Wayland session)
    bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'
#
# Moving around:
#
    # Move your focus around
    bindsym $mod+$left focus left
    bindsym $mod+$down focus down
    bindsym $mod+$up focus up
    bindsym $mod+$right focus right
    # Or use $mod+[up|down|left|right]
    bindsym $mod+Left focus left
    bindsym $mod+Down focus down
    bindsym $mod+Up focus up
    bindsym $mod+Right focus right

    bindsym $mod+Ctrl+$left  resize shrink width  64px
    bindsym $mod+Ctrl+$down  resize grow   height 64px
    bindsym $mod+Ctrl+$up    resize shrink height 64px
    bindsym $mod+Ctrl+$right resize grow   width  64px

    # Move the focused window with the same, but add Shift
    bindsym $mod+Shift+$left move left
    bindsym $mod+Shift+$down move down
    bindsym $mod+Shift+$up move up
    bindsym $mod+Shift+$right move right
    # Ditto, with arrow keys
    bindsym $mod+Shift+Left move left
    bindsym $mod+Shift+Down move down
    bindsym $mod+Shift+Up move up
    bindsym $mod+Shift+Right move right
#
# Workspaces:
#
    # Switch to workspace
    bindsym $mod+1 workspace number 1
    bindsym $mod+2 workspace number 2
    bindsym $mod+3 workspace number 3
    bindsym $mod+4 workspace number 4
    bindsym $mod+5 workspace number 5
    bindsym $mod+6 workspace number 6
    bindsym $mod+7 workspace number 7
    bindsym $mod+8 workspace number 8
    bindsym $mod+9 workspace number 9

    # Move focused container to workspace
    bindsym $mod+Shift+1 move container to workspace number 1
    bindsym $mod+Shift+2 move container to workspace number 2
    bindsym $mod+Shift+3 move container to workspace number 3
    bindsym $mod+Shift+4 move container to workspace number 4
    bindsym $mod+Shift+5 move container to workspace number 5
    bindsym $mod+Shift+6 move container to workspace number 6
    bindsym $mod+Shift+7 move container to workspace number 7
    bindsym $mod+Shift+8 move container to workspace number 8
    bindsym $mod+Shift+9 move container to workspace number 9

    bindsym $mod+e splith
    bindsym $mod+v splitv

    # Make the current focus fullscreen
    bindsym $mod+f sticky disable ; fullscreen toggle
    bindsym $mod+g sticky disable ; fullscreen disable ; floating enable
    bindsym $mod+t sticky disable ; fullscreen disable ; floating disable

# Scratchpad:
#
    # Sway has a "scratchpad", which is a bag of holding for windows.
    # You can send windows there and get them back later.

    # Move the currently focused window to the scratchpad
    bindsym $mod+Shift+minus sticky enable ; move scratchpad

    # Show the next scratchpad window or hide the focused scratchpad window.
    # If there are multiple scratchpad windows, this command cycles through them.
    bindsym $mod+minus scratchpad show

    bindsym --locked $mod+F1        exec pamixer --set-volume 0
    bindsym --locked $mod+F2        exec pamixer --set-volume 45
    bindsym --locked $mod+F3        exec pamixer --set-volume 65
    bindsym --locked $mod+F4        exec pamixer --set-volume 100
    bindsym --locked $mod+F5        exec light -S 0
    bindsym --locked $mod+F6        exec light -S .1
    bindsym --locked $mod+F7        exec light -S 4
    bindsym --locked $mod+F8        exec light -S 25
    bindsym --locked $mod+F9        exec light -S 100
    bindsym --locked $mod+F10       exec ~/.dot/bin/alan-redshift
    bindsym --locked $mod+Shift+F10 exec sh -c 'export DBUS_SESSION_BUS_ADDRESS=unix:path=/run/user/1000/bus; busctl --user call rs.wl-gammarelay / rs.wl.gammarelay ToggleInverted'

    bindsym $mod+Control+Down  exec wlr-randr --output eDP-1 --transform normal
    bindsym $mod+Control+Right exec wlr-randr --output eDP-1 --transform 90
    bindsym $mod+Control+Up    exec wlr-randr --output eDP-1 --transform 180
    bindsym $mod+Control+Left  exec wlr-randr --output eDP-1 --transform 270

    bindsym --locked $mod+Delete exec sh -c 'systemctl suspend'
    bindsym $mod+Backspace exec sh -c 'waylock -fork-on-lock -init-color 0x1d2b53 -input-color 0x008751 -fail-color 0xff004d'

    bindsym $mod+F11 exec $HOME/.dot/bin/xshot
    bindsym $mod+Shift+F11 exec feh --force-aliasing --scale-down --draw-filename /tmp/ss.png

    bindsym $mod+F12       exec $HOME/.dot/bin/xrecord
    bindsym $mod+Shift+F12 exec mpv --loop --force-window "$(fd '^screencast_.*\.mp4$' ~/Desktop | sort | tail -n 1)"

    # There are a few "modes" that are displayed in xstat.
    # The modes are: WARP/FCITX and MIRROR/RECORD/SCREENSHOT. This exits out of all those modes! This is how you end screen recording sessions.
    bindsym $mod+Backslash exec zsh -c 'killall -s INT wf-recorder ; killall -s INT wl-mirror ; killall -s INT slurp ; systemctl --user stop warpd ; systemctl --user stop fcitx5'

font SourceCodePro Bold 10
titlebar_padding 2

client.focused #fff1e8 #ffffff #00ffff #ff0000
client.unfocused #888888 #888888 #888888 #888888

bar {
    font Iosevka Term 11
    status_padding 0
    # mode invisible
    position top

    # When the status_command prints a new line to stdout, swaybar updates.
    # The default just shows the current date and time.
    status_command while xstat; do sleep 1; done

    colors {
        statusline #fff1e8
        background #000000
        inactive_workspace #000000 #000000 #fff1e8
        focused_workspace #fff1e8 #000000 #fff1e8
        active_workspace #888888 #000000 #888888
    }
}

# sway does not set DISPLAY/WAYLAND_DISPLAY in the systemd user environment
# See FS#63021
# Adapted from xorg's 50-systemd-user.sh, which achieves a similar goal.

# Upstream refuses to set XDG_CURRENT_DESKTOP so we have to.
exec systemctl --user set-environment XDG_CURRENT_DESKTOP=sway
exec systemctl --user set-environment GTK_IM_MODULE=fcitx5
exec systemctl --user set-environment QT_IM_MODULE=fcitx5
exec systemctl --user set-environment XMODIFIERS="@im=fcitx5"

input * {
    xkb_options "compose:menu"
}

exec systemctl --user import-environment DISPLAY \
                                         SWAYSOCK \
                                         WAYLAND_DISPLAY \
                                         XDG_CURRENT_DESKTOP

exec hash dbus-update-activation-environment 2>/dev/null && \
     dbus-update-activation-environment --systemd DISPLAY \
                                                  SWAYSOCK \
                                                  XDG_CURRENT_DESKTOP=sway \
                                                  WAYLAND_DISPLAY

exec systemctl --user restart foot-server swayidle fcitx

# Adjust for alignment, e.g., 0.95 0 0.05 0 1 0 0 0 1 for offsets

# Usually won't use touch.
input type:touch events disabled

# But could use the pen!
input type:tablet_tool events enabled

# idk why a sleep is needed here... but it is.
exec_always sleep .25s && systemctl --user restart wl-gammarelay-rs && sleep .25s && ~/.dot/bin/alan-redshift
