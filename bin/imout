#!/bin/bash

# A simple script that will exit out of my gui. As you can see, I've tried many different guies over time.
  if [[ "$XDG_CURRENT_DESKTOP" == "sway"    ]]; then swaymsg 'exit'
elif [[ "$XDG_CURRENT_DESKTOP" == "river"   ]]; then killall river
elif [[ "$CURR_WM"             == "bspwm"   ]]; then killall bspwm
elif [[ "$CURR_WM"             == "xfce4"   ]]; then killall xfce4-session
elif [[ "$CURR_WM"             == "i3"      ]]; then killall i3
elif [[ "$CURR_WM"             == "awesome" ]]; then killall awesome
elif [[ "$CURR_WM"             == "gnome3"  ]]; then killall gnome-session-binary
else echo "No recognized gui to kill.";
fi
