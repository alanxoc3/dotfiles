#!/bin/bash
ARGS=''
if [[ "$1" = "4" ]]; then
  ARGS='-m 4'
elif [[ "$1" = "3" ]]; then
  ARGS=''
else
  echo 'ERROR: You must specify the llm to use!'
  exit 1
fi

if [[ "$#" -gt 2 ]]; then
  e "${@:2}" | OPENAI_API_KEY=$(pa s chatgpt) llm prompt $ARGS -s "$2"
else
  txt="$(cat)"
  OPENAI_API_KEY=$(pa s chatgpt) llm chatgpt $ARGS -s "$2" <<< "$txt"
fi
